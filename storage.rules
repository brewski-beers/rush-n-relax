rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Public ambient videos - read-only for everyone, write-only for admins
    match /ambient/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && 
                      firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Public branding assets - read-only for everyone, write-only for admins
    match /branding/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && 
                      firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Public product images - read-only for everyone, write-only for admins
    match /products/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && 
                      firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Everything else - authenticated users only
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
