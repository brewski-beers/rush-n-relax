rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Contact submissions collection: public write only (for contact form)
    match /contact-submissions/{docId} {
      allow read: if false;
      allow create: if true;
      allow update, delete: if false;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}