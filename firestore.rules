rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Contact submissions collection: public write only (for contact form)
    match /contact-submissions/{docId} {
      allow read: if false;
      allow create: if true;
      allow update, delete: if false;
    }

    // Location reviews: written daily by scheduled Cloud Function (Admin SDK bypasses rules)
    // Clients read directly; writes remain server-only
    match /location-reviews/{placeId} {
      allow read: if true;
      allow write: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}