{
  "name": "rush-n-relax",
  "version": "1.0.0",
  "description": "Cannabis retail PWA with Firestore backend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:emulators": "firebase emulators:start",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:emulators\"",
    "build": "tsc && vite build",
    "build:functions": "cd functions && npm run build",
    "preview": "vite preview",
    "deploy": "npm run build && firebase deploy --except functions",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,css,json,md}\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "TEST_MODE=smoke playwright test e2e/age-gate.spec.ts --reporter=line",
    "test:e2e:smoke:prod": "TEST_MODE=smoke PLAYWRIGHT_BASE_URL=https://rush-n-relax.web.app playwright test e2e/age-gate.spec.ts --reporter=line",
    "test:e2e:core": "TEST_MODE=core playwright test e2e/age-gate.spec.ts e2e/user-journey.spec.ts e2e/app.spec.ts --reporter=line",
    "test:e2e:full": "TEST_MODE=full playwright test --reporter=list",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:health": "playwright test e2e/health-checks.spec.ts",
    "functions:shell": "firebase functions:shell",
    "functions:logs": "firebase functions:log",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "firebase": "^10.7.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-error-boundary": "^6.1.0",
    "react-router-dom": "^7.12.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.3",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.2",
    "firebase-admin": "^13.0.1",
    "firebase-tools": "^13.0.2",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdom": "^23.0.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^5.0.11",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.1.0",
    "wait-on": "^8.0.5"
  }
}
